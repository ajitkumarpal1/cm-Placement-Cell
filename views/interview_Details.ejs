<!-- company Details  -->
<section class="text-gray-600 body-font">
  <div class="container px-5 py-24 mx-auto">
    <div class="flex items-center lg:w-3/5 mx-auto border-b pb-1 mb-1 border-gray-200 sm:flex-row flex-col">
      <div
        class="sm:w-32 sm:h-32 h-20 w-20 sm:mr-10 inline-flex items-center justify-center rounded-full bg-purple-100 text-purple-500 flex-shrink-0">

        <img alt="team" class="w-16 h-16 bg-gray-100 object-cover object-center flex-shrink-0 rounded-full mr-4"
          src="/images/company.png">

      </div>
      <div class="flex-grow sm:text-left text-center mt-6 sm:mt-0">
        <h2 class="text-gray-900 text-lg title-font font-medium mb-2">
          <%= interview.companyName %>
        </h2>
        <p class="leading-relaxed text-base">Lorem ipsum dolor sit amet consectetur adipisicing elit. Laudantium eaque
          nostrum ad, autem laboriosam cum explicabo omnis commodi. Quod odit libero neque esse dicta iste sit,
          voluptatum deleniti nemo ab!</p>
        <a class="mt-3 text-purple-500 inline-flex items-center">
          <%= interview.date %>
        </a>
      </div>
    </div>
  </div>
</section>

<!-- list of all students who allocate to this company -->
<section class="text-gray-600 body-font mx-auto">
  <div class="container px-5 mx-auto">
    <div class="flex flex-col text-center w-full mb-20">
      <h1 class="sm:text-3xl text-2xl font-medium title-font mb-4 text-gray-900">Students List</h1>
    </div>

    <div class="flex flex-wrap -m-2">
      <% interview.students.forEach(student=> { %>
        <div class="p-2 lg:w-1/3 md:w-1/2 w-full">
          <div class="h-full flex items-center border-gray-200 border p-4 rounded-lg">
            <img alt="team" class="w-16 h-16 bg-gray-100 object-cover object-center flex-shrink-0 rounded-full mr-4"
              src="/images/dummy-profile.png">

            <div class="flex-grow">
              <h2 class="text-gray-900 title-font font-medium">
                <%= student.name %>
              </h2>
              <p class="text-gray-500"> Batch : <%= student.batch %>
              </p>
              <p class="text-gray-500"> College : <%= student.college %>
              </p>
              <p class="text-gray-500"> Status : <%= student.status %>
              </p>
              <p class="text-gray-500"> DSAFinalScore : <%= student.DSAFinalScore %>
              </p>
              <p class="text-gray-500"> WebDFinalScore : <%= student.WebDFinalScore %>
              </p>
              <p class="text-gray-500"> ReactFinalScore : <%=student.ReactFinalScore %>
              </p>
            </div>
          </div>
        </div>
        <% }); %>
    </div>
  </div>
</section>

<!-- mark a result status -->
<section class="text-gray-600 body-font">
  <div class="container px-5 py-24 mx-auto">
    <div class="flex flex-col text-center w-full mb-8">
      <h1 class="sm:text-3xl text-2xl font-medium title-font mb-4 text-gray-900">Mark Result Status</h1>
    </div>
    <form action="/interviews/<%= interview._id %>/result" method="POST">
      <div
        class="flex lg:w-2/3 w-full sm:flex-row flex-col mx-auto px-8 sm:space-x-4 sm:space-y-0 space-y-4 sm:px-0 items-end">
        <div class="relative flex-grow w-full">
          <label for="full-name" class="leading-7 text-sm text-gray-600"> Name</label>
          <select name="studentId" required
            class="w-full bg-gray-100 bg-opacity-50 rounded border border-gray-300 focus:border-purple-500 focus:bg-transparent focus:ring-2 focus:ring-purple-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
            <% interview.students.forEach(student=> { %>
              <option value="<%= student._id %>">
                <%= student.name %>
              </option>
              <% }); %>
          </select>
        </div>
        <div class="relative flex-grow w-full">
          <label for="result" class="leading-7 text-sm text-gray-600">Result</label>
          <select name="result" required
            class="w-full bg-gray-100 bg-opacity-50 rounded border border-gray-300 focus:border-purple-500 focus:bg-transparent focus:ring-2 focus:ring-purple-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
            <option value="PASS">PASS</option>
            <option value="FAIL">FAIL</option>
            <option value="On Hold">On Hold</option>
            <option value="Didn't Attempt">Didn't Attempt</option>
          </select>
        </div>
        <button
          class="text-white bg-purple-500 border-0  py-1 px-10 focus:outline-none hover:bg-purple-600 rounded ">Mark</button>
    </form>
  </div>
  </div>
</section>

<!-- Allocate a student to an interview -->
<section class="text-gray-600 body-font">
  <div class="container px-5 py-24 mx-auto">
    <div class="flex flex-col text-center w-full mb-8">
      <h1 class="sm:text-3xl text-2xl font-medium title-font mb-4 text-gray-900">Allocate New Student</h1>
    </div>
    <form action="/interviews/<%= interview._id %>/allocate" method="POST">
      <div
        class="flex lg:w-2/3 w-full sm:flex-row flex-col mx-auto px-8 sm:space-x-4 sm:space-y-0 space-y-4 sm:px-0 items-end">
        <div class="relative flex-grow w-full">
          <label for="studentId">Select Student </label>
          <select name="studentId" required
            class="w-full bg-gray-100 bg-opacity-50 rounded border border-gray-300 focus:border-purple-500 focus:bg-transparent focus:ring-2 focus:ring-purple-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
            <% students.forEach(student=> { %>
              <option value="<%= student._id %>">
                <%= student.name %>
              </option>
              <% }); %>
          </select>
        </div>
        <button
          class="text-white bg-purple-500 border-0  py-1 px-10 focus:outline-none hover:bg-purple-600 rounded ">Allocate</button>
    </form>
  </div>
  </div>
</section>

<!-- linking external javascripts  -->
<script>
      <% if (flash.success && flash.success.length > 0) {%>
    new Noty({
      theme: 'sunset',
      text: '<h3><%= flash.success%></h3>',
      type: 'success',
      layout: 'topRight',
      timeout: 3000
    }).show();
              <% } %>
  
              <% if (flash.error && flash.error.length > 0) {%>
    new Noty({
      theme: 'sunset',
      text: '<%= flash.error%>',
      type: 'error',
      layout: 'topRight',
      timeout: 3000
    }).show();
              <% } %>
</script>